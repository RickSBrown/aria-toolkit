{
	"manifest_version": 2,
	"name": "ARIA Validator",
	"description": "Scans page for WAI-ARIA implementation issues. Not an HTML5 validtor, just ARIA and nothing else.",
	"author": "Rick Brown",
	"version": "${build.version}",
	"background": {
		"persistent": false,
		"scripts": ["background.js"]
	},
	"icons": {
		"16": "icon/16/Boton_correcto.png",
		"48": "icon/48/Boton_correcto.png",
		"128": "icon/128/Boton_correcto.png"},
	"browser_action": {
		"default_icon": "icon/48/Boton_correcto.png",
		"default_title": "Validate ARIA"
	},
	"options_page": "options.html",
	"content_scripts": [
	{
		"matches": ["<all_urls>"],
		"js": ["contentscript.js", "js/aria-${build.version}.js", "js/aria.validator-${build.version}.js"]
	}
	],
	"permissions": ["activeTab", "storage", "tabs"]
}
